<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuillTryOut</title>

    <!-- Quill CSS -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />

    <!-- Optional Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuillTryOut.styles.css" asp-append-version="true" />
    <style>
        .ql-editor p {
            position: relative;
        }

            .ql-editor p::after {
                content: '¶';
                color: gray;
                user-select: none;
                pointer-events: none;
                visibility: hidden; /* hidden by default */
                margin-left: 2px;
            }

        .ql-editor.show-paragraph-marks p::after {
            visibility: visible; /* show on toggle */
        }

        .ql-editor {
            min-height: 300px;
            padding-left: 50px;
            padding-right: 50px;
        }

        .ruler {
            margin-bottom: 5px;
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .dropdown-menu {
            max-height: 150px;
            overflow-y: auto;
        }

        .ql-toolbar .dropdown .btn {
            all: unset; /* reset inherited styles */
            display: inline-block;
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
            background-color: #6c757d;
            color: white;
            cursor: pointer;
        }

        .ql-editor li {
            /* Take the first child's font-size and apply it to the li */
            font-size: inherit;
        }

        .ql-editor li span {
            display: inline-block;
        }
        
        .ql-editor li::marker {
            font-size: inherit;
        }
        
        /* Quill Custom Fonts */
        .ql-font-arial {
            font-family: Arial, sans-serif;
        }

        .ql-font-times-new-roman {
            font-family: "Times New Roman", serif;
        }

        .ql-font-courier-new {
            font-family: "Courier New", monospace;
        }

        .ql-font-roboto {
            font-family: "Roboto", sans-serif;
        }

        .ql-font-georgia {
            font-family: Georgia, serif;
        }

        .ql-font-impact {
            font-family: Impact, fantasy;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QuillTryOut</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QuillTryOut - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Quill JS -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>


    <script>
        if (typeof Quill !== 'undefined') {
            const Font = Quill.import('formats/font');
            Font.whitelist = ['arial', 'times-new-roman', 'courier-new', 'roboto', 'georgia', 'impact'];
            Quill.register(Font, true);

            const Size = Quill.import('attributors/style/size');
            Size.whitelist = [
                '1px', '2px', '3px', '4px', '5px', '6px', '7px', '8px', '9px', '10px',
                '11px', '12px', '13px', '14px', '15px', '16px', '17px', '18px', '19px', '20px',
                '21px', '22px', '23px', '24px', '25px', '26px', '27px', '28px', '29px', '30px',
                '31px', '32px', '33px', '34px', '35px', '36px', '37px', '38px', '39px', '40px'
            ]; Quill.register(Size, true);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
